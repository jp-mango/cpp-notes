{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/output/scratch.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"miDebuggerPath": "C:\\Program Files\\LLVM\\bin\\lldb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for LLDB",
					"text": "type summary add --no-value --python-function lldb.macosx.heap.dylibheap.DYLIBHeapSummaryProvider",
					"ignoreFailures": true
				}
			]
		}
	]
}
